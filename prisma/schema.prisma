generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Gender {
  MALE
  FEMALE
}

model ChildProfile {
  id        String    @id @default(cuid())
  userId    String
  age       Int
  gender    Gender
  hobbies   String
  createdAt DateTime  @default(now())
  updatedAt DateTime? @updatedAt
}

model LearningPlan {
  id           String    @id @default(cuid())
  userId       String
  goal         String
  interests    String
  numberOfDays Int
  planJson     Json
  createdAt    DateTime  @default(now())
  updatedAt    DateTime? @updatedAt
  
  // Relation to progress tracking
  progress     UserProgress[]
}

model UserProgress {
  id              String        @id @default(cuid())
  userId          String
  learningPlanId  String
  dayNumber       Int
  completed       Boolean       @default(false)
  completedAt     DateTime?
  studyDuration   Int?          // in minutes
  notes           String?
  createdAt       DateTime      @default(now())
  updatedAt       DateTime?     @updatedAt
  
  // Relations
  learningPlan    LearningPlan  @relation(fields: [learningPlanId], references: [id], onDelete: Cascade)
  
  // Unique constraint to prevent duplicate progress entries
  @@unique([userId, learningPlanId, dayNumber])
}
